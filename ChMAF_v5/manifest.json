{
	"manifest_version": 2,
	"name": "ChMAF",
	"version": "5.0.0",
	
	  "background": {
		  "scripts": ["bg.js"]
		},
	  "browser_action": {
		  "default_icon": "/icons/38.png",
		  "default_title": "ChMAF - Your Professional Multitool"
	  },
	  "externally_connectable": {
		  "matches": [
			  "*://skyeng.autofaq.ai/*",
			  "*://crm2.skyeng.ru/*"
		  ]
	  },
	  "content_scripts": [
	  {
		  "js": ["content.js",
				  "/Extras/chart.js",
				  "/Extras/jquery-3.7.1.js",
				  "/Extras/moment.js",
				  "/Modules/Addstat.js",
				  "/Modules/AFOperatorStatus.js",
				  "/Modules/AlarmClock.js",
				  "/Modules/AutoRespond.js",
				  "/Modules/BinBankInfo.js",
				  "/Modules/Calendar.js",
				  "/Modules/ChatHistory.js",
				  "/Modules/CustomTemplates.js",
				  "/Modules/Grabber.js",
				  "/Modules/GrList.js",
				  "/Modules/JiraSearch.js",
				  "/Modules/Knowledge.js",
				  "/Modules/LessonStatus.js",
				  "/Modules/Link.js",
				  "/Modules/LinkKC.js",
				  "/Modules/Linksdostup.js",
				  "/Modules/Marks.js",
				  "/Modules/MobilePass.js",
				  "/Modules/OperatorStatuse.js",
				  "/Modules/OpStatusMM.js",
				  "/Modules/Radio.js",
				  "/Modules/RefuseForm.js",
				  "/Modules/ServiceDesk.js",
				  "/Modules/Settings.js",
				  "/Modules/Smartroom.js",
				  "/Modules/Statistica.js",
				  "/Modules/TaskCreate.js",
				  "/Modules/TemplatesFuncs.js",
				  "/Modules/TestRooms.js",
				  "/Modules/TestUsers.js",
				  "/Modules/Themes.js",
				  "/Modules/Userinfo.js",
				  "/Modules/VoiceHelper.js",
				  "/Lightbox/dist/js/lightbox.min.js"],
		  "css": ["CSS/style.css", "/Lightbox/dist/css/lightbox.min.css"],
		  "matches": ["*://skyeng.autofaq.ai/*", "*://*.skyeng.ru/*"],
		  "run_at": "document_end"
	  },
	  {
		  "js": ["/Modules/Consideration.js"],
		  "matches": ["*://billing-marketing.skyeng.ru/*"],
		  "run_at": "document_end"
	  }
	  ],
	  "icons" : {
		  "16" : "/icons/16.png",
		  "32" : "/icons/32.png",
		  "48" : "/icons/48.png",
		  "128" : "/icons/128.png"
	  },
	  "web_accessible_resources": [
		  "Modules/*"
	  ],
	  "permissions": [ 
		  "contextMenus",
		  "tabs",
		  "storage",
		  "*://*.skyeng.ru/*",
		  "*://skyeng.autofaq.ai/*",
		  "*://*.datsy.info/*",
		  "*://jira.skyeng.tech/*",
		  "*://mattermost.skyeng.tech/*",
		  "*://mm-time.skyeng.tech/*"
  
	  ]
  }