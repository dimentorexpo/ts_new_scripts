{ "manifest_version": 3, "name": "CRMHelper", "version": "2.0.0",

"background": {
	"service_worker": "bg.js"
	},
	"action": {
	  "default_icon": "/icons/48.png",
	  "default_title": "CRMHelper - Easy help for your work"
	},
	"externally_connectable": {
        "matches": ["*://crm2.skyeng.ru/*"]
    },
	"content_scripts": [
	{
		"js": ["content.js"],
		"matches": ["*://crm2.skyeng.ru/*"],
		"run_at": "document_idle"
	},
	{	  
		"js": [	"/Extras/jquery-3.7.1.js",
				"/Modules/AlarmClock.js",
				"/Modules/JiraSearch.js",
				"/Modules/LessonStatus.js",
				"/Modules/Linksdostup.js",
				"/Modules/OperatorStatuse.js",
				"/Modules/ServiceDesk.js",
				"/Modules/SettingsApp.js",
				"/Modules/Smartroom.js",
				"/Modules/TestRooms.js",
				"/Lightbox/dist/js/lightbox.min.js"],
		"css": ["/CSS/styles.css", "/Lightbox/dist/css/lightbox.min.css"],
		"matches": ["*://crm2.skyeng.ru/*"],
		"run_at": "document_idle"
	}
	],
	"icons" : {
		"16" : "/icons/16.png",
		"32" : "/icons/32.png",
		"48" : "/icons/48.png",
		"128" : "/icons/128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["Modules/*"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [ 
		"storage",
		"clipboardWrite"
	],
	"host_permissions": [ "https://*.skyeng.ru/*", "https://skyeng.autofaq.ai/*", "https://jira.skyeng.tech/*", "https://mm-time.skyeng.tech/*", "https://*.datsy.info/*" ]
}
